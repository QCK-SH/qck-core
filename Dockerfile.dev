# Development Dockerfile with hot reload and Diesel migrations
FROM rust:1.86

# Install PostgreSQL client libraries for Diesel
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libpq-dev \
    g++ \
    gcc \
    make \
    postgresql-client \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install development tools
RUN cargo install cargo-watch --locked && \
    cargo install diesel_cli --no-default-features --features postgres --locked

# Copy Cargo files for dependency caching from backend
COPY qck-backend/Cargo.toml qck-backend/Cargo.lock ./

# Pre-build dependencies
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    echo "// lib" > src/lib.rs && \
    echo "// Generated by Diesel - placeholder for build" > src/schema.rs && \
    cargo build && \
    rm -rf src

# Copy only backend project files
COPY qck-backend/ .

EXPOSE 8080

# Start with hot reload
# Embedded migrations run automatically on application startup
CMD ["cargo", "watch", "-x", "run --bin qck-backend"]